{
    "family": "server",
    "executionRoleArn": "arn:aws:iam::851725178693:role/NYITFamilyServiceExecutionRole",
    "taskRoleArn": "arn:aws:iam::851725178693:role/NYITFamilyTaskRole",
    "networkMode": "awsvpc",
    "cpu": "256",
    "memory": "512",
    "requiresCompatibilities": [ 
      "FARGATE" 
    ],
    "containerDefinitions": [
      {
        "name": "server",
        "image": "851725178693.dkr.ecr.ca-central-1.amazonaws.com/server",
        "essential": true,
        "healthCheck": {
            "command": ["CMD-SHELL", "curl -f http://localhost:5000/api/health || exit 1"],
            "interval": 30,
            "timeout": 5,
            "retries": 3,
            "startPeriod": 60
        },
        "portMappings": [
          {
            "name": "server",
            "containerPort": 5000,
            "protocol": "tcp", 
            "appProtocol": "http"
          }
        ],
        "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
              "awslogs-group": "nyit-family",
              "awslogs-region": "ca-central-1",
              "awslogs-stream-prefix": "server"
          }
        },
        "environment": [
          {"name": "FRONTEND_URL", "value": "*"},
          {"name": "BACKEND_URL", "value": "*"},
          {"name": "AWS_DEFAULT_REGION", "value": "ca-central-1"}
        ],
        "secrets": [
          {"name": "AWS_ACCESS_KEY_ID"    , "valueFrom": "arn:aws:ssm:ca-central-1:387543059434:parameter/cruddur/backend-flask/AWS_ACCESS_KEY_ID"},
          {"name": "AWS_SECRET_ACCESS_KEY", "valueFrom": "arn:aws:ssm:ca-central-1:387543059434:parameter/cruddur/backend-flask/AWS_SECRET_ACCESS_KEY"}
        ]
      }
    ]
  }